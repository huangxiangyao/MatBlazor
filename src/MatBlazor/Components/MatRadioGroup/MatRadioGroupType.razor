@namespace MatBlazor
@typeparam T
@inherits BaseMatRadioGroupType<T>
<CascadingValue Value="@this">


    @if (Items != null)
    {
        foreach (var item in Items)
        {
            if (ItemTemplate != null)
            {
                @ItemTemplate(item)
            }
            else
            {
                <MatRadioButtonType T="T" Value="@item">@item</MatRadioButtonType>
            }
        }
    }

    @ChildContent
</CascadingValue>