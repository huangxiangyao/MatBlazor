@namespace MatBlazor
@typeparam T
@inherits BaseMatSelectType<T>

@base.BuildRenderTree

@code
{

    protected override RenderFragment GetChildContent()
    {
        return @<MatContentWrapper>
                @{
                    var index = 0;
                    foreach (var item in Items)
                    {
                        <MatOptionTypeKey T="T" TK="int" Value="@index">
                            @if (ItemTemplate != null)
                            {
                                @ItemTemplate(item)
                            }
                            else
                            {
                                @item?.ToString()
                            }
                        </MatOptionTypeKey>
                        index++;
                    }
                }
             </MatContentWrapper>;
    }

}