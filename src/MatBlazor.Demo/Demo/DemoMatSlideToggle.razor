<DocMatSlideToggle></DocMatSlideToggle>

<h5 class="mat-h5">Example</h5>

<DemoContainer>
    <Content>
        <MatSlideToggle @bind-Checked="@Val1"></MatSlideToggle>
        <span>@Val1</span>
        <MatSlideToggle @bind-Checked="@Val2"></MatSlideToggle>
        <span>@Val2</span>

        @code
        {
            private bool Val1 = false;
            private bool Val2 = true;
        }

    </Content>
    <SourceContent>
    	<BlazorFiddle Template="MatBlazor" Code=@(@"
        <MatSlideToggle @bind-Checked=""@Val1""></MatSlideToggle>
        <span>@Val1</span>
        <MatSlideToggle @bind-Checked=""@Val2""></MatSlideToggle>
        <span>@Val2</span>

        @code
        {
            private bool Val1 = false;
            private bool Val2 = true;
        }

    ")></BlazorFiddle>
    </SourceContent>
</DemoContainer>


